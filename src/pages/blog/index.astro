---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

const allPosts = (await getCollection("blog")).filter((post) => !post.data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Blog</h1>

    {
      sortedPosts.length === 0 ? (
        <p class="text-lg text-gray-600 dark:text-gray-400">
          No blog posts yet. Check back soon!
        </p>
      ) : (
        <div class="space-y-8">
          {sortedPosts.map((post) => (
            <article class="border-b border-gray-200 dark:border-gray-800 pb-8">
              <a href={`/blog/${post.slug}`} class="group">
                <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-gray-600 dark:text-gray-400 mb-2">
                  {post.data.description}
                </p>
                <time class="text-sm text-gray-500 dark:text-gray-500">
                  {post.data.pubDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
                {post.data.tags.length > 0 && (
                  <div class="flex gap-2 mt-2">
                    {post.data.tags.map((tag) => (
                      <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            </article>
          ))}
        </div>
      )
    }
  </div>
</Layout>
